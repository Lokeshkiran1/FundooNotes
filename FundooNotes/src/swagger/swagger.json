{
    "swagger": "2.0",
    "info": {
        "version": "v1",
        "title": "Fundoo Notes",
        "description": "Fundoo Notes CLI"
    },
    "host": "localhost:4000",
    "basePath": "/api/v1/",
    "tags": [
        {
            "name": "CLI",
            "description": "Creating user"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/users/register": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "New User registration",
                "parameters": [
                    {
                        "name": "Create User",
                        "in": "body",
                        "description": "User",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "User Created"
                    }
                },
                "401":{
                    "description":"Bad request error"

                },
                "500": {
                    "description": "Internal Server Error"
                }
            }
        },
        "/users/login":{
            "post":{
                "tags":[
                    "User"
                ],
                "description":"user login",
                "parameters":[
                    {
                        "name":"User Login",
                        "in":"body",
                        "description":"Login Details",
                        "schema":{
                            "$ref":"#/definitions/Login"
                        }
                    }
                ],
                "produces":["application/json"],
                "responses":{
                    "201": {
                        "description": "User loged in"
                    },
                    "401":{
                        "description":"invalid user email id"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }

                }
            }
        },
        "/users/forgotPassword":{
            "post":{
                "tags":[
                    "User"
                ],
                "description":"user forgot password",
                "parameters":[
                    {
                        "name":"forgotPassword",
                        "in":"body",
                        "description":"user Email",
                        "schema":{
                        "$ref":"#/definitions/forgotPassword"
                        }
                    }
                ],
                "produces":["application/json"],
                "responses":{
                    "201": {
                        "description": "User is authorised"
                    },
                    "401":{
                        "description":"invalid user email id"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }

                }
            }
        },
        "/users/resetPassword":{
            "post":{
                "tags":[
                    "User"
                ],
                "description":"user reset password",
                "parameters":[
                    {
                        "name":"resetPassword",
                        "in":"body",
                        "description":"Password",
                        "schema":{
                            "$ref":"#/definitions/resetPassword"
                        }
                    }
                ],
                "produces":["application/json"],
                "responses":{
                    "201":{
                        "description":"resetting password is successfull"
                    },
                    "500":{
                        "description":"Internal Server Error"
                    }
                },
                "security":[
                    {
                        "JWT":[]
                    }
                ]
            }
        },
        "/notes":{
            "post":{
                "tags":[
                    "Notes"
                ],
                "description":"Create New Note",
                "parameters":[
                    {
                        "name":"create note",
                        "in":"body",
                        "description":"Note",
                        "schema":{
                            "$ref":"#/definitions/Note"
                        }
                    }
                ],
                "produces":[
                    "application/json"
                ],
                "responses":{
                    "201":{
                        "description":"note created successfully"
                    },
                    "401":{
                        "description":"Bad request error"
                    },
                    "500":{
                        "description":"Bad request error"
                    }
                }
            }

        }
    },
    "definitions": {
        "User": {
             "type": "object",
                "properties": {
                    "FirstName": {
                    "type": "string"
                },
                    "LastName": {
                    "type": "string"
                },
                    "EmailID": {
                    "type": "string"
                },
                     "Password": {
                    "type": "string"
                }
            }
        },
        "Login":{
            "type":"object",
            "properties":{
                "EmailID":{
                    "type":"string"
                },
                "Password":{
                    "type":"string"
                }
            }
        },
        "forgotPassword":{
            "type":"object",
            "properties":{
                "EmailID":{
                    "type":"string"
                }
            }
        },
        "resetPassword":{
            "type":"object",
            "properties":{
                "Password":{
                    "type":"string"
                }
            }
        }
    },
    "securityDefinitions":{
        "JWT":{
            "type":"apiKey",
            "name":"Authorization",
            "in":"header"
        }
    }
}
    